<% layout('layout') -%>

<div class="container">
	<div class="row">
		<div class="col-md-4">
			<img src="<%= product.image %>">
		</div>
		<div class="col-md-4">
			</div>
				<div class="col-md-4">
					<h3><%= product.name %></h3>
					<h1>Rs.<%= product.price %></h1>
				<div class="row">
				
				<form method="post" action="/add-to-cart/<%= product._id %>">
				      <div class="form-group">
					        <label="name">Price: </label>
					        <input type="text" class="form-control" name="price" value="<%= product.price %>">
				      </div>
				        <div class="form-group">
					        <label="name">Name </label>
					        <input type="text" class="form-control" name="name" value="<%= product.name %>">
				      </div>
				      <div class="form-group">
					        <label="name">Quantity</label>
					        <input type="number" min="1" class="form-control" name="quantity">
				      </div>
				      	<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
	           				<button type="submit" class="btn btn-success">ADD TO CART</button>
	    			</div>
	    		</form>	
	    		<a class="btn btn-primary" href="/" role="button">Contine Shopping</a>
			</div>
		</div>	
	</div>
</div>